<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdCampaignInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="260dp">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/video_viewcollapsing_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:contentScrim="?attr/colorPrimary"
                        app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Headline"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        app:titleEnabled="false">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey_20" />


                        <LinearLayout
                            android:id="@+id/image_view_layout_dots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/spacing_middle"
                            android:padding="@dimen/spacing_middle"
                            android:background="@color/transparent"
                            android:orientation="horizontal" />


                    </com.google.android.material.appbar.CollapsingToolbarLayout>


                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/video_view_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="260dp">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/collapsing_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:contentScrim="?attr/colorPrimary"
                        app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Headline"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        app:titleEnabled="false">

                        <VideoView
                            android:id="@+id/video_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:layout_collapseMode="parallax" />

                    </com.google.android.material.appbar.CollapsingToolbarLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/upload_new_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_mlarge"
                android:clickable="true"
                android:src="@drawable/ic_camera"
                android:tint="@android:color/white"
                app:backgroundTint="@color/colorAccent"
                app:fabSize="normal"
                app:layout_anchor="@id/image_card_view"
                app:layout_anchorGravity="bottom|right|end" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/upload_new_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_mlarge"
                android:clickable="true"
                android:src="@drawable/ic_video"
                android:tint="@android:color/white"
                app:backgroundTint="@color/colorAccent"
                app:fabSize="normal"
                app:layout_anchor="@id/video_view_card_view"
                app:layout_anchorGravity="bottom|right|end" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </ScrollView>
</FrameLayout>